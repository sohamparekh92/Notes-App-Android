<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soham.firstapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notebook"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Record Notes"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="List of records"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="Advanced Search"
            android:parentActivityName=".ListActivity" />
        <activity
            android:name=".InfoActivity"
            android:label="Info"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreativeInfoActivity"
            android:label="Creative Feature"
            android:parentActivityName=".CreativeInfoActivity" />
        <activity android:name=".SplashActivity"
            android:label="Record Notes"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
